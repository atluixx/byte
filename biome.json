{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 4,
    "lineWidth": 100
  },

  "linter": {
    "enabled": false
  },

  "assist": {
    "enabled": false
  },

  "json": {
    "formatter": {
      "enabled": true
    }
  },

  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single"
    }
  }
}
